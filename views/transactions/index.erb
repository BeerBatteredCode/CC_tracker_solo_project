<h1>Transactions</h1>

<table>
  <td>
    <a class="btn btn--action" href="/transactions/new">New transaction</a>
  </td>
  <tr>
    <td>
      <form action="/transactions">
      Select date:
      <input type="date" name="chosen_day">
      <input type="submit" value="Send">
      </form>
    </td>
  </tr>
</table>

<table>
  <% for transaction in @transaction_list %>
    <tr>
    <td>T-ID:<%= transaction.id %></td>
    <td>TAG:<%= transaction.stamp_finder.category.capitalize %> </td>
    <td>MERC:<%= transaction.merchant_finder.name %> </td>
    <td>CRGE: £<%= transaction.charge %></td>
    <td>D/T:<%= transaction.date %></td>

    <td><a href="/transactions/<%= transaction.id %>">View</a></td>
    <td>
      <form action="/transactions/<%= transaction.id %>/delete" method="POST">
        <input class="btn btn--danger" type="submit" value="Delete" />
      </form>
    </td>
  <% end %>
  </tr>
</table>

<ul>
  <table>
    <td></td>
    <td>Charity Total:</td>
    <td>£<%= @charity_total%></td>
    <td></td>
  </table>
</ul>
